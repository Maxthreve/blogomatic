<h1> <%= @article.title %> </h1>
<p> <%= @article.content %></p>

<h1> Tags </h1>
<%if @article.tags%>
  <% @article.tags.each do |tag| %>
  <p>
    <strong>Tags: </strong>
    <%= tag.name %>
  </p>
  <p><%= button_to 'Destroy', article_tag_url(@article.id, tag.id), method: :delete %></p>

  <%end%>
<%end%>
<h1> Add a Tag </h1>
<%= form_for([@article, @article.tags.build]) do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<%end%>

<%= link_to 'Back to Articles', articles_path %>
<%= link_to 'Edit Article', edit_article_path(@article) %>
